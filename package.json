    "react": ">=17 || >=18 || >=19",
    "react-dom": ">=17 || >=18 || >=19"
  },
  "dependencies": {
    "nspell": "^2.1.5",
    "react-word-spell-checker": "^1.0.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@types/nspell": "^2.1.6",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "eslint": "^9.29.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.2.0",
    "typescript": "~5.8.3",
    "vite": "^7.0.0"
  }
}
